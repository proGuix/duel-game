{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@core/*": ["src/core/*"],
      "@game/*": ["src/game/*"],
      "@ui/*": ["src/ui/*"],
      "@types": ["src/types"],
      "@ai/*": ["src/game/ai/*"]
    },
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": ["src"]
}